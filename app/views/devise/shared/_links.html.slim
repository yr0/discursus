.text-right
  - if controller_name != 'sessions'
    = link_to t('log_in'), new_session_path(resource_name), class: 'dsc-button clear'
    br

  - if devise_mapping.registerable? && controller_name != 'registrations'
    = link_to t('register'), new_registration_path(resource_name)
    br

  - if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
    = link_to t('forgot_password'), new_password_path(resource_name)
    br

  /- if devise_mapping.confirmable? && controller_name != 'confirmations'
  /  = link_to t('did_not_receive_confirmation'), new_confirmation_path(resource_name)
